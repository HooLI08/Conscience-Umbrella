<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<title>관리자 페이지</title>
<style>
body { font-family:'Noto Sans KR', sans-serif; text-align:center; background:#f7f9fc; }
table { margin:auto; border-collapse:collapse; width:60%; }
th, td { border:1px solid #ccc; padding:10px; }
</style>
</head>
<body>
<h2>관리자 페이지</h2>
<button onclick="logout()">로그아웃</button>

<table>
  <tr><th>번호</th><th>이용자</th><th>대여시간</th></tr>
  <tbody id="data"></tbody>
</table>

<script>
if (localStorage.getItem("admin") !== "true") {
  alert("관리자 로그인이 필요합니다.");
  window.location.href = "login.html";
}

const list = [
  {id:1, user:"김정훈", time:"2025-11-05 10:00"},
  {id:2, user:"박지민", time:"2025-11-05 10:05"},
];

let html = "";
list.forEach(l => {
  html += `<tr><td>${l.id}</td><td>${l.user}</td><td>${l.time}</td></tr>`;
});
document.getElementById("data").innerHTML = html;

function logout() {
  localStorage.removeItem("admin");
  window.location.href = "login.html";
}
</script>
</body>
</html>
